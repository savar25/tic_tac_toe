<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tic_tac_toe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_new_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".leader"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".choice"
            android:screenOrientation="portrait"/>
        <activity android:name=".playerPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".winPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".gamePage"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>